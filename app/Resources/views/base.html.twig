<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ru" lang="ru">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{% block title %}Тестовое задание Книжный магазин{% endblock %}</title>
		<link rel="stylesheet" type="text/css" href="{{ asset('share/fancybox/jquery.fancybox-1.3.4.css') }}">
		<link href="{{ asset('css/styles.css') }}" type="text/css" rel="stylesheet" />
		<link href="{{ asset('css/buttons.css') }}" type="text/css" rel="stylesheet" />
		{% block stylesheets %}{% endblock %}
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
	</head>
    <body style="background-color: #fff">
		<div id="sheet">
			<div id="top">
				<a href="{{ path('homepage') }}"><div class="logo"></div></a>
		        <div class="top-right">
		        <div class="login"><a href="{{ logout_path('main') }}">Выйти</a></div></div>
			</div>
		<div style="clear: both;"></div>
		<div id="content">
			<div class="content-table">
				<div id="top-menu" class="content-table">
	        		<div style="padding-left:8px;">
		        		<div class="tabs-menu" >
							<ul class="tabs lights-on">
								{% set rt = app.request.attributes.get('_route') %}
				                <li {{ ('homepage' == rt) ? 'class="active"' : ''}}>	<a href="{{ path('homepage') }}">Главная</a></li>
				                <li {{ ('books' == rt) ? 'class="active"' : ''}}>	<a href="{{ path('books') }}">Книги</a></li>
				                <li {{ ('authors' == rt) ? 'class="active"' : ''}}>	<a href="{{ path('authors') }}">Авторы</a></li>
				                <li {{ ('genres' == rt) ? 'class="active"' : ''}}>	<a href="{{ path('genres') }}">Жанры</a></li>
				                <li {{ ('profile' == rt) ? 'class="active"' : ''}}>	<a href="{{ path('profile') }}">Профиль</a></li>
				                  
							</ul>                                                                                                    
						</div>
					</div>
				</div>
				<div style="clear: both;"></div>
				<div id="inner-content">
		            {% block content %}{% endblock %}
				</div>
			</div>
		</div>
		</div>
		<script src="{{ asset('js/jquery.min.js') }}" type="text/javascript"></script>
		<script src="{{ asset('share/fancybox/jquery.mousewheel-3.0.4.pack.js') }}" type="text/javascript"></script>
		<script src="{{ asset('share/fancybox/jquery.fancybox-1.3.4.js') }}" type="text/javascript"></script>
		<script src="{{ asset('share/fancybox/jquery.fancybox-1.3.4.js') }}" type="text/javascript"></script>
		<script type="text/javascript" src="{{ asset('js/general.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/calendar.js') }}"></script>
		{% block javascripts %}{% endblock %}
    </body>
</html>